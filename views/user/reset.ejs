<% layout('layout') %>

<div class="container">
    <br><br>
    <div class="text-center reg_msg">
        <h1><a href="/">RateMe</a></h1>
    </div>
   <br><br>

   <div class="text-center reg_msg">
        <h2 class="fancy"><span>Reset Password</span></h2>
   </div><br>

    <div class="row signup">

      <% if(hasErrors) { %>
        <% for(var i = 0; i < messages.length; i++) { %>
          <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">
            </a>
       <%= messages[i] %>
          </div>
      <% } %>
      <% } %>

      <% if(noErrors) { %>
          <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">
            </a>
       <%= success %>
          </div>
      <% } %>

        <form method="POST">

            <div class="form-group input_group">
                <input id="email" class="form-control" name="password" type="password" autocomplete="on" placeholder="PASSWORD" style="margin-bottom:20px;">
            </div>

            <div class="form-group input_group">
                <input id="password" class="form-control" name="cpassword" type="password" placeholder="CONFIRM PASSWORD" style="margin-bottom:20px;">
            </div>


            <div class="form-group">
                <input type="submit" id="submit" value="Reset Password" class="form-control btn btn-primary" name="reset" style="">
            </div>

          </form>

          <div>
              <h5>Go back to <a href="/login">Login</a></h5>
          </div>


    </div>
</div>
